<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.MovieDetail[0].Title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MovieDetail[0].ReleaseDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MovieDetail[0].Language)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MovieDetail[0].RuntimeMinutes)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MovieDetail[0].Genre)
