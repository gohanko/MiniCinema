<div>
    <div class="container my-3">
        <h1>Showtimes</h1>
    </div>

    <div class="container-fluid py-2">
        <div class="row">
            @foreach (var item in Model.Movies)
            {
                <div class="col">
                    <div class="card gx-5">
                        <img src="data:image/svg+xml;charset=UTF-8,%3csvg class='bd-placeholder-img card-img-top' width='100%25' height='180' xmlns='http://www.w3.org/2000/svg' role='img' aria-label='Placeholder: Image cap' preserveAspectRatio='xMidYMid slice' focusable='false'%3e%3ctitle%3ePlaceholder%3c/title%3e%3crect width='100%25' height='100%25' fill='%23868e96'%3e%3c/rect%3e%3ctext x='50%25' y='50%25' fill='%23dee2e6' dy='.3em'%3eImage cap%3c/text%3e%3c/svg%3e" class="card-img-top">
                        <div class="card-body">
                            <h5 class="card-title">@Html.DisplayFor(modelItem => item.Title)</h5>
                            <p class="card-text">@Html.DisplayFor(modelItem => item.ReleaseDate)</p>
                            <a asp-page="./ShowtimeByMovie/" asp-route-id="@item.MovieId" class="btn btn-primary">Buy Ticket</a>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>